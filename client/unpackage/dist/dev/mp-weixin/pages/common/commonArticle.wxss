.content {
  min-height: 100vh;
  height: 100vh;
}
.pink-text {
  color: "#ff9a9e";
}
.green-text {
  color: "rgba(28, 187, 180,1)";
}
.pink-btn {
  background-color: rgba(255, 154, 158, 0.8);
  box-shadow: 1px 1px 6px #ff9a9e;
}
.green-btn {
  background-color: rgba(28, 187, 180, 0.8);
  box-shadow: 1px 1px 6px #1cbbb4;
}
.blue-btn {
  background-color: rgba(108, 172, 255, 0.8);
  box-shadow: 1px 1px 6px #6cacff;
}
.pink-bg {
  background: linear-gradient(to bottom, rgba(254, 207, 239, 0.6), rgba(254, 207, 239, 0));
}
.green-bg {
  background: linear-gradient(to bottom, rgba(141, 198, 63, 0.3), rgba(141, 198, 63, 0));
}
.blue-bg {
  background: linear-gradient(to bottom, rgba(141, 235, 255, 0.3), rgba(141, 235, 255, 0));
}
.u-card-wrap {
  background-color: #f3f4f6;
  padding: 1px;
}
.u-body-item {
  font-size: 32rpx;
  color: #333;
  padding: 20rpx 10rpx;
}
.u-body-item image {
  width: 120rpx;
  flex: 0 0 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-left: 12rpx;
}
.grid-text {
  font-size: 30rpx;
  margin-top: 4rpx;
  color: #909399;
  font-weight: bold;
  text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.15);
}
.add-btn {
  position: fixed;
  right: 30px;
  bottom: 30px;
  border-radius: 30px;
  width: 60px;
  height: 60px;
  color: white;
  font-size: 40px;
  line-height: 60px;
  text-align: center;
}

